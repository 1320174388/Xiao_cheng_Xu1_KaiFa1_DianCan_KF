<view class="page">
<view class='header'>
    <!-- 搜索框 -->
  <view class="weui-search-bar">
    <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
        <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
        <input type="text" class="weui-search-bar__input"  disabled='true' placeholder="搜索"           bindtap="wxSearchTab"/>
      </view>
    </view>
  </view>
<!-- logo  -->
  <view class="shopInfo">
    <view class='shopname'>
      <view class='shopname-backcolor'>
        <text class='context-dian'>点餐</text>
        <text class='context-xiao'>小程序</text>
      </view>
      <view class='text-shopname'><text class='context-shopname'>点餐小程序店铺名称</text></view>
    </view>
    <view class='notice'>
      <view class="iconfont icon-prom prom"></view> 
      <text class='into'>点餐：满100元减10元</text>
      <text class='setout'>到店取餐：满100元减12元</text>
    </view>
  </view>
</view>
  <!-- 左侧栏  -->
  <view class='nav'>
    <!--左侧  -->
      <view class='left'>
        <view class="swiper-tab">
            <view wx:for="{{navbar}}" data-idx="{{index}}" 
                class="swiper-tab-list {{currentTab==index ? 'on' : ''}}" 
                wx:key="{{index}}" data-current="0" bindtap="swichNav">
                {{index}}
            </view>
        </view>
      </view>

    <!--右侧  -->
      <view view class='right'>
        <!-- 热销  -->
        <view wx:for="{{navbar}}" wx:key="{{index}}" hidden="{{currentTab!==index}}"> 
          <text class='context-title'>{{index}}</text> 
          <view class="weui-cells__title">
            <view wx:for="{{item}}" class='food-list'>
              <view class='dianji' bindtap='single'>
                <image src='{{host}}{{item.food_img}}' class='food-img'></image>
                <view  class='context-name'>
                  <text>{{item.food_name}}</text>
                </view>
                <view class='context-price'>
                   <text>￥{{item.food_price}}</text>
                </view>
              </view>
              <view class='foot-right'>
                <view class="iconfont icon-minus2 sign"></view> 
                <view class="count" data-count="0">0</view>
                <view class="iconfont icon-plus1 sign"  bindtap="showitem"></view> 
              </view>
            </view>
          </view>
        </view>
    </view>
    <!-- 购物车  -->
        <view class="{{open?'display_show':'display_none'}} cart-wrap">
        <view class="gouwuche" bindtap="cartClick">
            <view class="gouwuche-wrap">
              <text class="iconfont icon-shopping signshop" bindtap="showitems"></text>
            </view>
        </view>
        <view class='info'>
          <text class='prompt'>客观，看看今天要吃什么呢？</text>
        </view>
    </view>   

    <!-- 清空购物车  -->
        <!-- <view class="cart-mask"></view> -->
        <view class="{{close?'display_show':'display_none'}}">
          <view class="cart-content">
            <view class="tool">
              <view class="left">购物车</view>
              <view class="right-clear" bindtap="showitemes">
                <text class="iconfont icon-shanchu"></text>
                  清空购物车
              </view>
            </view>
          <scroll-view class="content-scroll"scroll-y="">
              <view class="content-item">
                <view class="title">产品1_1</view>
              </view>
              <view class="action">
                <text class="buydel" >-</text>
                <text class="count">0</text>
                <text class="buy">+</text>
              </view>
          </scroll-view>
          <view class="cart-wrap">
          <view class="gouwuche" bindtap="cartClick">
              <view class="gouwuche-wrap1">
                <text class="iconfont icon-shopping aftershop"></text>
              </view>
              <view class="gouwuche-count">1</view>
          </view>
          <view class='info'>
            <text class='prompt'>￥</text>
          </view>
          <view class="jiesuan" bindtap='end'>去下单</view>
        </view>
      </view>  
      </view> 
  </view>
</view>



 
