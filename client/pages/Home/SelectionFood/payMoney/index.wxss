.page{
  background-color: #F0EFF2;
}
/*头部信息  */
/* 订单未支付 */
.head-info{
  width: 84%;
  margin-left:29rpx;
  background-color: white;
  margin-top:30rpx;
}
.nopay{
  font-size: 35rpx;
  text-align: center;
  padding-top: 20rpx;
}
.prom{
  font-size: 30rpx;
  text-align: center;
  color: #b9b9b9;
  margin-top:10rpx;
}
.choose{
 padding-bottom: 30rpx;
}
.hurry{
  width: 27%;
  height: 70rpx;
  margin-left: 150rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
  background-color: #FF8A09;
  color: white;
}
.exit{
  width: 27%;
  height: 70rpx;
  margin-left: 350rpx;
  font-size: 28rpx;
  margin-top: -67rpx;
  background-color: #FFF;
  color: rgba(0,0,0,0.7);
}
/* 支付成功 */
.right{
  padding-left: 20rpx;
}
.prom1{
  font-size: 25rpx;
  color: #b9b9b9;
  margin-top:10rpx;
  padding-left: 230rpx;
}
.times{
  color: #30b0e8;
}
.img{
  width: 5%;
  height:30rpx;
}
.close{
  width: 27%;
  height: 70rpx;
  margin-left: 220rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  background-color:#f5a623;
  color: white;
}
.display_show{  
    display: block; 
    padding: 10px;  
}  
.display_none{  
    display: none;
}
/*中间信息-菜品详情  */
.content-scroll {
  width:100%;
  max-height:150px;
}
.body-info{
  width: 90%;
  margin-left: 35rpx;
  background-color: white;
  margin-top:30rpx;
}
.title{
  width: 100%;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
  text-align: center;
}
.context-menu{
  line-height: 80rpx;
}
.img-menu{
  width: 18%;
  height: 120rpx;
}
.menuifon{
  margin: 20rpx 0 0rpx 0;
  padding-left: 20rpx;
  padding-bottom: 18rpx;
  border-bottom: 1rpx solid rgba(0,0,0,0.06);
}
.context-name{
  position: absolute;
  padding-left: 20rpx;
  color: rgba(0,0,0,0.7);
  font-size: 30rpx;
}
.context-number{
  position:relative;
  padding-left: 20rpx;
  top: -40rpx;
  color: rgba(0,0,0,0.7);
  font-size: 30rpx;
}
.context-price{
  float: right;
  padding-right: 35rpx;
  color: rgba(0,0,0,0.7);
  font-size: 30rpx;
}
/*合计  */
.sum{
  width: 90%;
  margin-left: 4%;
  border-radius:10rpx;
  background-color: white;
  text-align: right;
  font-size: 30rpx;
}
.money{
  line-height: 100rpx;
  padding-right: 35rpx;
  color: red;
}
/* 备注 */
.beizhu{
  width: 90%;
  margin-left: 32rpx;
  background-color: white;
  margin-top:30rpx;
}
.context-remarks{
  line-height: 100rpx;
  padding: 20rpx;
  font-size: 30rpx;
  color: rgba(0,0,0,0.7);
}
/* 订单详情 */
.order-info{
  width: 87.5%;
  margin-left: 32rpx;
  background-color: white;
  margin-top:30rpx;
  line-height:60rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
  color: rgba(0,0,0,0.7);
}
.context{
  color:  #858585;
  padding-left: 20rpx;
}
