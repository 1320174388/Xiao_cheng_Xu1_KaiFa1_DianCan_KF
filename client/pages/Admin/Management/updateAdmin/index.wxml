<form bindsubmit="formSubmit">
  <view class="tunnel">
  <input hidden name="admin_id" value="{{admin_value.id}}"></input>
          <view class="tunnel-text uploader-text">
              <text>管理员名称:</text>
              <input name="admin_name" value="{{admin_value.admin_name}}"></input>
              <span>></span>
          </view>

<!--管理员职位选择  -->
          <view class="phone_one" bindtap="clickPerson">
              <view class="tunnel-text uploader-text">
                <text>请选择管理员职位：</text>
                <span class="sp">></span>
              </view> 
          </view>
  </view>
  <view class="choose">
      <radio-group class="radio-group" bindchange="radioChange"  name="role_id">
           <view wx:for="{{array}}" wx:key="{{index}}"  class="chooseText">
                <view>
                    <text bindtap="mySelect" data-me="{{item.role_name}}">
                              {{item.role_name}}</text>
                    <radio class="tunnel-switch" color="LimeGreen" value="{{item.id}}"/>
                </view>
          </view>
      </radio-group> 
  </view>

  <!--确定  -->
  <view class="tunne2">
    <view class="sure">
      <button class="but" formType="submit">确定</button>
    </view>
  </view>
 </form>