#desks{
  width:100%;
  display: flex;
  justify-content: space-around;
  flex-wrap:wrap;
  background: #fff;
}
.desk{
   width:23%; 
   min-height: 200rpx; 
  text-align: center;
  margin-bottom:40rpx;
  margin-top:0rpx;
  padding-top: 0rpx;
  background-image:url("https://l1ur0jdu.qcloud.la/uploads/shops/desk.jpg");
  background-size: 100% 100%;
}
.desk image{
  width:100%;
  height: 80%;
}


/*弹框  */
.update{
   width: 65px;
   height:25px; 
   text-align: center;
   font-size: 15px; 
   color: skyblue; 
   position: relative;
   top:-20rpx;
   overflow: hidden; 
   /* background-color:rgba(0,0,0,0.5); */
   margin-bottom: 0px;
   line-height: 25px;
} 
.world{
   position: relative;
   top:180rpx;
}
 .del{
   width: 65px;
   height:25px; 
   overflow: hidden; 
   /* background-color:rgba(0,0,0,0.5);/ */
   text-align: center;
   font-size: 15px; 
   color: red; 
   margin-top: 0px;
   top:-20rpx;
   line-height: 25px;
}  
.add{
  background-color: skyblue;
}

