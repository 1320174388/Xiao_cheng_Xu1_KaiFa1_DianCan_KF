/*店铺管理  */
.tunne2 {
  height: 107rpx;
  width: 100%;
  background: #FFF;
  display: flex;
  align-items: center;
  font-family:"LiHei Pro Medium ",儷黑 Pro;
  margin-top:5rpx;
}
/*用户、菜单、订单管理  */
.tunne3 {
    height: 100rpx;
    width: 100%;
    background: #FFF;
    border-bottom: 1px solid rgba(0, 0, 0, .1);
    display: flex;
    align-items: center;
    font-family:"LiHei Pro Medium ",儷黑 Pro;
}
.uploader-text2, .tunnel-text2 {
    width: 100%;
    line-height: 50px;
    font-size: 35rpx;
    color: #222;
    font-family:"LiHei Pro Medium ",儷黑 Pro;
    padding-left: 30rpx;
}
.tunnel-text2 {
    position: relative;
    color: #222;
    display: flex;
    flex-direction: row;
    align-content: center;
    justify-content: space-between;
    box-sizing: border-box;
}
.bord{
  border-top: 1px solid rgba(0, 0, 0, .1);
  border-bottom: 1px solid rgba(0, 0, 0, .1);
}
.tunnel-switch {
    position: absolute;
    right: 30rpx;
    top: -2rpx;
}
/*确定  */
.tunne4{
    position:fixed;
    bottom:0;
    height: 50px;
    width: 100%;
    
}
.sure{
    color: #FFF;
    line-height: 50px;
    font-size: 35rpx;
    font-family:"LiHei Pro Medium ",儷黑 Pro;
    text-align: center;
}
.but{
  background:#77b3ff;
  color: #FFF;
}
