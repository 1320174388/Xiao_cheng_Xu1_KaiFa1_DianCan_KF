  padding-left:30rpx;
}
.content-prom{
  font-size: 35rpx;
  padding-top:24rpx;
  color: #cccccc;
}
.content-ico{
  float: right;
  color: #cccccc;
  font-size:55rpx;
  text-align:right;
  padding-right:30rpx;
  padding-top:10rpx;
}
.context-choose{
  margin-top: 15rpx;
}
