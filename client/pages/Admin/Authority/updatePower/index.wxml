     <view class="list"  wx:for="{{array}}" wx:key="{{index}}">
        <form bindsubmit="formSubmit" >
            <view class="left">
                <view>职位名称:{{item.role_name}}</view>
                <text class="tx1">职位ID:{{item.id}}</text>
            </view>
            <view class="right">
                <input hidden name="id" value="{{item.id}}"></input>
                <input hidden name="roleName" value="{{item.role_name}}"></input>
                <button class='modify' form-type="submit">修改</button>
            
            <!-- 删除  -->
                <button class="remove" data-editid="{{item.id}}" bindtap="deleteClick">删除</button>
            </view>
       </form>
   </view>
</view>


